<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DelegacionMAUI.DetallesCatalogo.AvisoDetallePage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#f4f4f4">

            <Frame CornerRadius="12"
               Padding="20"
               HasShadow="True"
               BackgroundColor="White"
               BorderColor="#e5e7eb">

                <VerticalStackLayout Spacing="12">

                    <!-- TÃ­tulo -->
                    <Label x:Name="TituloLabel"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#1e3a8a"
                       LineBreakMode="WordWrap" />

                    <!-- Fecha -->
                    <Label x:Name="FechaLabel"
                       FontSize="14"
                       TextColor="#6b7280"
                       FontAttributes="Italic" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Texto del contenido -->
                    <Label x:Name="TextoLabel"
                       FontSize="16"
                       TextColor="#374151"
                       LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>