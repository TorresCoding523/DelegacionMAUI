<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DelegacionMAUI.DetallesCatalogo.DocumentoSolicitadoDetallePages"
             Title="DocumentoSolicitadoDetallePages">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24" BackgroundColor="#f3f4f6">

            <Frame CornerRadius="12"
               BackgroundColor="White"
               Padding="20"
               HasShadow="True"
               BorderColor="#e5e7eb">

                <VerticalStackLayout Spacing="16">

                    <!-- TÃ­tulo / Nombre -->
                    <Label x:Name="IdCiudadanoSolicitanteLabel"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#1f2937"
                       LineBreakMode="WordWrap" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Fecha de Solicitud -->
                    <Label Text="Fecha de solicitud:"
                       FontSize="14"
                       TextColor="#6b7280"
                       FontAttributes="Bold"/>
                    <Label x:Name="FechaSolicitudLabel"
                       FontSize="16"
                       TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Fecha de Entrega -->
                    <Label Text="Fecha de entrega:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="FechaEntregaLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Usuario Generador -->
                    <Label Text="Usuario que genero el documento:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="IdUsuarioGeneradorLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Fecha de Pago -->
                    <Label Text="Fecha de pago:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="FechaPagoLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Monto Pagado -->
                    <Label Text="Monto pagado:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="MontoPagadoLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Usuario Que Entrega Documento -->
                    <Label Text="Usuario que entrega documento:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="IdUsuarioQueEntregaLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Finalidad -->
                    <Label Text="Finalidad:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="FinalidadLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Notas -->
                    <Label Text="Notas:"
                       FontSize="14"
                       TextColor="#6b7280"
                       FontAttributes="Bold"/>
                    <Label x:Name="notasLabel"
                           FontSize="16"
                           TextColor="#374151"
                           LineBreakMode="WordWrap" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>