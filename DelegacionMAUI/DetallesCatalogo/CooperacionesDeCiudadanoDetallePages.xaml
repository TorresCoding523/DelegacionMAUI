<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DelegacionMAUI.DetallesCatalogo.CooperacionesDeCiudadanoDetallePages"
             Title="CooperacionesDeCiudadanoDetallePages">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24" BackgroundColor="#f3f4f6">

            <Frame CornerRadius="12"
                   BackgroundColor="White"
                   Padding="20"
                   HasShadow="True"
                   BorderColor="#e5e7eb">

                <VerticalStackLayout Spacing="16">

                    <!-- Título / Nombre -->
                    <Label x:Name="idCiudadanoLabel"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#1f2937"
                           LineBreakMode="WordWrap" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Cooperación -->
                    <Label Text="Tipo de cooperación:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="idCooperacionLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Fecha de Pago -->
                    <Label Text="Fecha de pago:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="fechaPagoLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Pago Parcial -->
                    <Label Text="¿Es pago parcial?"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="esParcialLabel"
                           FontSize="16"
                           TextColor="#374151" />

                    <BoxView HeightRequest="1" BackgroundColor="#e5e7eb" />

                    <!-- Notas -->
                    <Label Text="Notas:"
                           FontSize="14"
                           TextColor="#6b7280"
                           FontAttributes="Bold"/>
                    <Label x:Name="notasLabel"
                           FontSize="16"
                           TextColor="#374151"
                           LineBreakMode="WordWrap" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>